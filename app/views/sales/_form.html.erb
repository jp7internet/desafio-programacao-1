<%= semantic_form_for @sale, :html => { :class => "form-horizontal panel-body", :role => "form"} do |f| %>
    
  <div class="form-group">
  <%= f.label :purchaser_name, class: "col-sm-2 control-label" %>      
    <div class="col-sm-10">
      <%= f.input :purchaser_name, :as => :string %> 
      <%= f.semantic_errors :purchaser_name %>  
    </div>
  </div>

  <div class="form-group">
  <%= f.label :item_description, class: "col-sm-2 control-label" %>      
    <div class="col-sm-10">
      <%= f.input :item_description, :as => :string %> 
      <%= f.semantic_errors :item_description %>  
    </div>
  </div>

  <div class="form-group">
  <%= f.label :item_price, class: "col-sm-2 control-label" %>      
    <div class="col-sm-10 float">
      <%= f.input :item_price, :as => :string %> 
      <%= f.semantic_errors :item_price %>  
    </div>
  </div>

  <div class="form-group">
  <%= f.label :purchase_count, class: "col-sm-2 control-label" %>      
    <div class="col-sm-10 integer">
      <%= f.input :purchase_count, :as => :string %> 
      <%= f.semantic_errors :purchase_count %>  
    </div>
  </div>

  <div class="form-group">
  <%= f.label :merchant_address, class: "col-sm-2 control-label" %>      
    <div class="col-sm-10">
      <%= f.input :merchant_address, :as => :string %> 
      <%= f.semantic_errors :merchant_address %>  
    </div>
  </div>

  <div class="form-group">
  <%= f.label :merchant_name, class: "col-sm-2 control-label" %>      
    <div class="col-sm-10">
      <%= f.input :merchant_name, :as => :string %> 
      <%= f.semantic_errors :merchant_name %>  
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-4">
      <%= link_to "Cancel", sales_url, {class: "btn btn-lg btn-default btn-block"} %>            
    </div>
    <div class="col-sm-4">
    <%= f.submit "Save", { :class =>  "btn btn-lg btn-primary btn-block" } %>      
    </div>
  </div>
  
<% end %>

